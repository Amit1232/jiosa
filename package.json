{
  "name": "jiosaavn-api",
  "version": "1.0.0",
  "description": "Unofficial JioSaavn API",
  "license": "MIT",
  "repository": "https://github.com/sumitkolhe/jiosaavn-api",
  "author": "Sumit Kolhe",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "start": "npm run build && cross-env NODE_ENV=production node public/server.js",
    "build": "tsc --build",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint . --ext \".ts\"",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "deploy": "vercel deploy --prod",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint && yarn format"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.2",
    "@hono/zod-validator": "^0.1.11",
    "hono": "^3.10.0",
    "lru-cache": "^10.0.2",
    "module-alias": "^2.2.3",
    "node-forge": "^1.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@kolhe/eslint-config": "^1.2.6",
    "@types/node": "^20.9.0",
    "@types/node-forge": "^1.3.9",
    "eslint": "^8.53.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.1.1",
    "typescript": "^5.2.2"
  },
  "_moduleAliases": {
    "@modules": "src/modules",
    "@common": "src/common"
  }
}
