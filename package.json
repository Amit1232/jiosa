{
  "name": "jiosaavn-api",
  "version": "1.0.0",
  "description": "Unofficial JioSaavn API",
  "license": "MIT",
  "repository": "https://github.com/sumitkolhe/jiosaavn-api",
  "author": "Sumit Kolhe",
  "main": "src/app.ts",
  "scripts": {
    "dev": "tsx watch ./src/server.ts",
    "start": "npm run build && cross-env NODE_ENV=production node public/server.js",
    "build": "tsc",
    "format": "prettier --write \"./**/*.{js,ts,json}\"",
    "lint": "eslint . --ext \".ts\"",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "deploy": "vercel deploy --prod",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint && yarn format"
  },
  "dependencies": {
    "@hono/node-server": "^1.2.1",
    "celebrate": "^15.0.1",
    "got-cjs": "^12.5.4",
    "hono": "^3.9.2",
    "joi": "^17.9.2",
    "lru-cache": "^9.0.3",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@kolhe/eslint-config": "^1.2.6",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/node-forge": "^1.3.4",
    "eslint": "^8.46.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.7",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6"
  },
  "_moduleAliases": {
    "@modules": "src/modules",
    "@common": "src/common"
  }
}
